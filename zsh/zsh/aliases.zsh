# ============================================
# Aliases
# ============================================

# Git shortcuts
alias gs='git status'
alias ga='git add .'
alias gc='git commit -m'
alias gp='git push'
alias gpl='git pull'
alias gco='git checkout'
alias gb='git branch'
alias gd='git diff'

#windows boot
alias boot_windows='sudo bootctl set-oneshot auto-windows && sudo reboot'

# Vesktop with Niri screen sharing fix
alias vesktop='XDG_CURRENT_DESKTOP=gnome /opt/Vesktop/vesktop --enable-features=UseOzonePlatform --ozone-platform=wayland'
